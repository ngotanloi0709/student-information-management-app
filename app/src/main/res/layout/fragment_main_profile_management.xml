<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">

    <RelativeLayout
        android:layout_width="120dp"
        android:layout_height="120dp">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/imageMainProfileManagementAvatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/img_sample_avatar"
            app:shapeAppearanceOverlay="@style/circleImageView" />

        <ImageButton
            android:id="@+id/buttonMainProfileManagementCamera"
            android:layout_width="31dp"
            android:layout_height="30dp"
            android:layout_alignRight="@id/imageMainProfileManagementAvatar"
            android:layout_alignBottom="@id/imageMainProfileManagementAvatar"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_camera" />

    </RelativeLayout>

    <EditText
        android:id="@+id/editTextMainProfileManagementName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Name" />

    <EditText
        android:id="@+id/editTextMainProfileManagementAge"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Age" />

    <EditText
        android:id="@+id/editTextMainProfileManagementPhone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="text"
        android:text="Phone number" />

    <Button
        android:id="@+id/buttonMainProfileManagementSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save" />

</LinearLayout>